@page
@model WellBeings.Pages.ContactusModel
@{
}
<h1 class="text-white">@ViewData["Title"]</h1>

<h3 class="text-white">Basic Contact Form</h3>
<form asp-action="Index" asp-controller="Home" method="post" class="needs-validation" novalidate>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Name" class="text-white" for="validationCustom01">Please enter your name:</label>
            <input type="text" asp-for="Name" class="form-control" id="validationCustom01" placeholder="First name" value="Mark" required />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Email" class="text-white">Please enter your email:</label>
            <input type="text" class="form-control" asp-for="Email" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Message" >Please enter your message:</label>
            <textarea asp-for="Message" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <input type="submit"  ID="ButtonSetCookie" Text="Set cookie" runat="server" class="form-control" value="Send Message!" />
        </div>
    </div>
</form>